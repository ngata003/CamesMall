<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CamesMall.Views.HomePage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="2*,Auto,*" 
          Padding="30,60,30,40">

        <VerticalStackLayout Grid.Row="0"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Spacing="20">

            <Border StrokeThickness="0"
                    BackgroundColor="Transparent"
                    HeightRequest="140"
                    WidthRequest="140">
                <Image Source="camesmall.png"
                       Aspect="AspectFit"/>
            </Border>
            
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1"
                           Spacing="12"
                           Margin="0,20,0,0">

            <Label Text="CAMES IMPORT"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="white"
                   HorizontalTextAlignment="Center"/>

            <Label Text="votre partenaire d'achat"
                   FontSize="15"
                   TextColor="LightGray"
                   HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

        <Button Grid.Row="2"
                Text="GET STARTED"
                BackgroundColor="#E63946"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="25"
                HeightRequest="55"
                VerticalOptions="End"
                Clicked="OnGetStartedClicked"
                Shadow="{Shadow Brush=Black, Opacity=0.2, Radius=8, Offset='0,4'}"/>

    </Grid>

</ContentPage>