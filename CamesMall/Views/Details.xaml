<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CamesMall.Views.Details"
             BackgroundColor="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" 
              BackgroundColor="White"
              Padding="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0"
                   Source="camesmall.png"
                   Aspect="AspectFit"
                   HeightRequest="40"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"/>

            <ImageButton Grid.Column="2"
                         Source="hamburger_menu.png"
                         Aspect="AspectFit"
                         WidthRequest="30"
                         HeightRequest="30"
                         BackgroundColor="Transparent"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Clicked="OnMenuClicked"/>
        </Grid>

        <!-- Contenu principal -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="20">

                <Grid ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="#F5F5F5"
                            StrokeThickness="0"
                            Stroke="#F5F5F5"
                            Padding="20"
                            HeightRequest="250"
                            StrokeShape="RoundRectangle 15">
                        <Image Source="newbalance_shoe.png"
                               Aspect="AspectFit"/>
                    </Border>

                    <!-- DESCRIPTION -->
                    <VerticalStackLayout Grid.Column="1" 
                                         Spacing="15"
                                         VerticalOptions="Center">

                        <Label Text="NEW BALANCE"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Black"/>

                        <Label TextColor="#666666"
                               FontSize="14"
                               LineHeight="1.4">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="chaussure flexible"/>
                                    <Span Text="&#x0a;"/>
                                    <Span Text="adaptée pour les sportifs"/>
                                    <Span Text="&#x0a;"/>
                                    <Span Text="et les fidèles adonnés de"/>
                                    <Span Text="&#x0a;"/>
                                    <Span Text="shopping"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Button Text="commandez maintenant"
                                BackgroundColor="#FF4444"
                                TextColor="White"
                                FontSize="12"
                                CornerRadius="25"
                                Padding="20,12"
                                HorizontalOptions="Start"
                                Clicked="OnCommanderClicked"/>
                    </VerticalStackLayout>
                </Grid>

                <!-- PRIX ET POINTURES -->
                <Grid ColumnSpacing="10" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 0-45p -->
                    <Border Grid.Column="0"
                            Background="White"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            Padding="15"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="0-45p"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                            <Label Text="2800 XAF"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- 46-70p -->
                    <Border Grid.Column="1"
                            Background="White"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            Padding="15"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="46-70p"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                            <Label Text="2500 XAF"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- 76-1000p -->
                    <Border Grid.Column="2"
                            Background="White"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            Padding="15"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="76-1000p"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                            <Label Text="2000 XAF"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- FOOTER ROUGE -->
                <Grid ColumnSpacing="0" 
                      Margin="0,30,0,0"
                      BackgroundColor="#FF4444"
                      Padding="20,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Services -->
                    <VerticalStackLayout Grid.Column="0" Spacing="12">
                        <Label Text="SERVICES"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Label Text="creation web"
                               FontSize="12"
                               TextColor="White"/>
                        <Label Text="design graphique"
                               FontSize="12"
                               TextColor="White"/>
                    </VerticalStackLayout>

                    <!-- Liens -->
                    <VerticalStackLayout Grid.Column="1" Spacing="12">
                        <Label Text="LIENS"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Label Text="home"
                               FontSize="12"
                               TextColor="White"/>
                        <Label Text="shop"
                               FontSize="12"
                               TextColor="White"/>
                    </VerticalStackLayout>

                    <!-- Horaire -->
                    <VerticalStackLayout Grid.Column="2" Spacing="12">
                        <Label Text="HORAIRES"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Label Text="08h-13h"
                               FontSize="12"
                               TextColor="White"/>
                        <Label Text="15h-20h"
                               FontSize="12"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
