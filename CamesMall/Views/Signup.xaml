<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CamesMall.Views.Signup"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout Padding="30,60,30,30"
                           Spacing="25">

            <VerticalStackLayout HorizontalOptions="Center"
                               Spacing="15">

                <Border StrokeThickness="0"
                        BackgroundColor="Transparent"
                        HeightRequest="100"
                        WidthRequest="100">
                    <Image Source="camesmall.png"
                           Aspect="AspectFit"/>
                </Border>

                <Label Text="SIGNUP"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,0"/>

            </VerticalStackLayout>

            <VerticalStackLayout Spacing="18">

                <VerticalStackLayout Spacing="8">
                    <Label Text="username"
                           FontSize="14"
                           TextColor="#E63946"
                           FontAttributes="Bold"/>
                    <Border Stroke="#D0D0D0"
                            StrokeThickness="1"
                            BackgroundColor="White"
                            Padding="15,0"
                            HeightRequest="50">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Entry Placeholder="Exp: Nga Tamto Alan Ullrich"
                               PlaceholderColor="#A0A0A0"
                               TextColor="Black"
                               FontSize="14"
                               VerticalOptions="Center"
                               BackgroundColor="Transparent"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="8">
                    <Label Text="email"
                           FontSize="14"
                           TextColor="#E63946"
                           FontAttributes="Bold"/>
                    <Border Stroke="#D0D0D0"
                            StrokeThickness="1"
                            BackgroundColor="White"
                            Padding="15,0"
                            HeightRequest="50">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Entry Placeholder="ngatamto@gmail.com"
                               PlaceholderColor="#A0A0A0"
                               TextColor="Black"
                               FontSize="14"
                               Keyboard="Email"
                               VerticalOptions="Center"
                               BackgroundColor="Transparent"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="8">
                    <Label Text="email"
                       FontSize="14"
                       TextColor="#E63946"
                       FontAttributes="Bold"/>
                    <Border Stroke="#D0D0D0"
                            StrokeThickness="1"
                            BackgroundColor="White"
                            Padding="15,0"
                            HeightRequest="50">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Entry Placeholder="ngatamto@gmail.com"
                               PlaceholderColor="#A0A0A0"
                               TextColor="Black"
                               FontSize="14"
                               Keyboard="Email"
                               VerticalOptions="Center"
                               BackgroundColor="Transparent"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="8">
                    <Label Text="password"
                           FontSize="14"
                           TextColor="#E63946"
                           FontAttributes="Bold"/>
                    <Border Stroke="#D0D0D0"
                            StrokeThickness="1"
                            BackgroundColor="White"
                            Padding="15,0"
                            HeightRequest="50">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Entry Placeholder="••••••••••••••••"
                               PlaceholderColor="#A0A0A0"
                               TextColor="Black"
                               FontSize="14"
                               IsPassword="True"
                               VerticalOptions="Center"
                               BackgroundColor="Transparent"/>
                    </Border>
                </VerticalStackLayout>

            </VerticalStackLayout>

            <Button Text="SIGNUP"
                    BackgroundColor="#E63946"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="55"
                    Margin="0,20,0,0"
                    Clicked="OnSignUpClicked"
                    Shadow="{Shadow Brush=Black, Opacity=0.2, Radius=8, Offset='0,4'}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>